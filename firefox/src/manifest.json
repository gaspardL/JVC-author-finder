{
    "name": "JVC author finder",
    "description" : "Met en Ã©vidence l'auteur d'un topic de forum jeuxvideo.com",
    "version": "1.0",
    "manifest_version": 2,
    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["background/main.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "http://www.jeuxvideo.com/forums/*",
                "https://www.jeuxvideo.com/forums/*"
            ],
            "exclude_matches": [
                "http://www.jeuxvideo.com/forums/0-*",
                "https://www.jeuxvideo.com/forums/0-*"
            ],
            "js": ["content/storage.js", "content/main.js"]
        }
    ],
    "options_ui": {
        "page": "options/options.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "alarms"
    ]
}
